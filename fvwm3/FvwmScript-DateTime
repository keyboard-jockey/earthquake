WindowTitle {DateTime}
WindowSize  120 55
Font "xft:Sans:style=Bold:size=13" 

Init
 Begin
  Set $Time = (GetOutput {exec date "+%I:%M %p"} 1 -1)
  Set $Date = (GetOutput {exec date "+%a %b %d"} 1 -1)

  ChangeTitle 1 $Time
  ChangeTitle 2 $Date
End

PeriodicTasks
 Begin 
  If (RemainderOfDiv (GetTime) 15)==0 Then
  Begin
   Set $Time = (GetOutput {exec date "+%I:%M %p"} 1 -1)
   Set $Date = (GetOutput {exec date "+%a %b %d"} 1 -1)

   ChangeTitle 1 $Time
   ChangeTitle 2 $Date
  End
End

Widget 1
Property
 Position 0 0
 Size 120 25
 Font "xft:Sans:style=Bold:size=13"
 Type ItemDraw
 Flags NoReliefString
 Title {}
Main
 Case message of
  SingleClic :
  Begin
  End
End

Widget 2
Property
 Position 0 25
 Size 120 30
 Font "xft:Sans:style=Bold:size=13"
 Type ItemDraw
 Flags NoReliefString
 Title {}
Main
 Case message of
  SingleClic :
  Begin
    Do {OnlyOneInternet} 
  End
End
